$button
	display block
	box-sizing border-box
	font 14px/50px 'ProximaNova Regular'
	text-align center
	background-color #222
	color #fff
	min-width 220px
	padding 0 2em
	margin 0 auto
	border none
	outline none
	cursor pointer
	transition .5s all ease
	
	&:hover
		background-color darken(#222, 10%)
	