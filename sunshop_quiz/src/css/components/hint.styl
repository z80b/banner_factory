$hint
    position relative
    z-index 0
    
    &:hover
        color #fff
    
    &-popup
        white-space pre-line
        text-align left
        absolute width 210px top 2em left 0
        display inline-block
        font 13px/22px 'ProximaNova Regular'
        color #333
        padding 20px 30px
        background-color #fff
        border solid 1px #888
        border-radius 3px
        opacity 0
        transform scale(0)
        transform-origin 0 0
        transition .5s transform cubic-bezier(0.68, 0, 0.27, 1.55)
        z-index 2
        
        b
            font 13px/25px 'ProximaNova Semibold'
        
        ~/--opened &
            opacity 1
            transform scale(1)