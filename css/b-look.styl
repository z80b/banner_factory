$b-look
    display block
    text-align center
    text-decoration none
    background #fff
    padding 10px
    box-sizing border-box
    
    &__title
        margin 0
        font 100 16px/32px Arial
        color #333
        transition .3s all ease
        
        ~/:hover &
            color #888
            font-weight 700
        
    &__description
        font 12px/1.8 Arial
        color #888
        
    &__image
        display block
        width 100%
        
        &-wrapper
            position relative
            
            &::after
                content ''
                display block
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                opacity 0
                background #000
                transition .3s opacity ease
                
                ~/:hover &
                    opacity .3